<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="RegistrationNotice" parent="BaseText">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubHeader" parent="BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header" parent="BaseText">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Content" parent="BaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainContent">
        <item name="android:padding">8dp</item>
    </style>
</resources>
