<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4th yr BSIT">

    </TextView>

    <LinearLayout
        style="@style/MainContent"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <CheckBox
            android:id="@+id/check_box_it205"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT 205">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_ics115"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ICS 115">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_itelect2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT-ELEC2">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_ics125"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ICS 125">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_itelect3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT-ELEC3">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_itelect4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT-ELEC4">

        </CheckBox>
        <CheckBox
            android:id="@+id/check_box_felec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F-ELEC2">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_box_felec3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F-ELEC3">

        </CheckBox>
    </LinearLayout>

    <LinearLayout
        style="@style/MainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/SubHeader"
            android:text="Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            style="@style/Content"
            android:id="@+id/edit_text_source_comment"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:inputType="text|textMultiLine">
        </EditText>
    </LinearLayout>

    <LinearLayout
        style="@style/MainContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save">

        </Button>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next">
        </Button>
    </LinearLayout>

</LinearLayout>